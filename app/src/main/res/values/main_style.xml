<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="tab_height">35dp</dimen>
    <dimen name="item_height">65dp</dimen>
    <dimen name="title_size">20dp</dimen>
    <!-- 底部高度 -->
    <dimen name="bottom_height">60dp</dimen>

    <!-- 横线 -->
    <style name="file_manager">
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="black_title">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/title_black</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="grey_title" parent="black_title">
        <item name="android:background">@color/tab_black</item>
        <item name="android:textSize">19dp</item>
    </style>

    <!-- 弹窗按钮 -->
    <style name="exit_button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16dp</item>

        <item name="android:background">@drawable/button_exit</item>
        <item name="android:text">Exit</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>